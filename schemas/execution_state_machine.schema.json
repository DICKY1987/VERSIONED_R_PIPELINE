{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "execution_state_machine.schema.json",
  "title": "ACMS State Machine Contract Schema",
  "type": "object",
  "required": ["states"],
  "additionalProperties": false,
  "properties": {
    "states": {
      "type": "object",
      "minProperties": 1,
      "patternProperties": {
        "^[A-Z_]+$": {
          "type": "object",
          "required": ["description", "allowed_transitions"],
          "properties": {
            "description": {
              "type": "string",
              "minLength": 1
            },
            "allowed_transitions": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[A-Z_]+$"
              }
            },
            "entry_actions": {
              "type": "array",
              "items": {
                "type": "string",
                "minLength": 1
              }
            },
            "retry_policy": {
              "type": "object",
              "required": ["max_attempts", "backoff_strategy", "backoff_base_seconds"],
              "properties": {
                "max_attempts": {
                  "type": "integer",
                  "minimum": 1
                },
                "backoff_strategy": {
                  "type": "string",
                  "enum": ["exponential", "linear", "fixed"]
                },
                "backoff_base_seconds": {
                  "type": "integer",
                  "minimum": 1
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  }
}
