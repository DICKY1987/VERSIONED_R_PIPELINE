{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/execution_state_machine.schema.json",
  "title": "Execution State Machine & Task DAG Contract",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "doc_key",
    "semver",
    "status",
    "effective_date",
    "owner",
    "contract_type",
    "states",
    "task_graph"
  ],
  "properties": {
    "doc_key": {
      "type": "string",
      "const": "EXECUTION_STATE_MACHINE"
    },
    "semver": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+(-[0-9A-Za-z\\.-]+)?$"
    },
    "status": {
      "type": "string",
      "enum": [
        "active",
        "draft",
        "deprecated"
      ]
    },
    "effective_date": {
      "type": "string",
      "format": "date"
    },
    "supersedes_version": {
      "type": [
        "string",
        "null"
      ]
    },
    "owner": {
      "type": "string",
      "minLength": 1
    },
    "contract_type": {
      "type": "string",
      "enum": [
        "policy",
        "contract"
      ]
    },
    "states": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": false,
      "patternProperties": {
        "^[A-Z_][A-Z0-9_]*$": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "description",
            "allowed_transitions"
          ],
          "properties": {
            "description": {
              "type": "string"
            },
            "allowed_transitions": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[A-Z_][A-Z0-9_]*$"
              },
              "uniqueItems": true
            },
            "entry_actions": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "uniqueItems": true
            },
            "exit_actions": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "uniqueItems": true
            },
            "on_error": {
              "type": "object",
              "additionalProperties": false,
              "properties": {
                "retry_policy": {
                  "type": "object",
                  "additionalProperties": false,
                  "properties": {
                    "max_retries": {
                      "type": "integer",
                      "minimum": 0
                    },
                    "backoff_base_seconds": {
                      "type": "integer",
                      "minimum": 0
                    },
                    "backoff_multiplier": {
                      "type": "number",
                      "minimum": 1.0
                    },
                    "jitter_seconds": {
                      "type": "integer",
                      "minimum": 0
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "task_graph": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "version",
        "tasks"
      ],
      "properties": {
        "version": {
          "type": "string"
        },
        "scheduling": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "order": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "parallel_groups": {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "max_concurrency": {
                    "type": "integer",
                    "minimum": 1
                  }
                }
              }
            }
          }
        },
        "tasks": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "additionalProperties": false,
            "required": [
              "id",
              "dependencies"
            ],
            "properties": {
              "id": {
                "type": "string",
                "pattern": "^[A-Za-z0-9_\\-\\.]+$"
              },
              "dependencies": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "uniqueItems": true
              },
              "priority": {
                "type": "integer"
              },
              "parallel_group": {
                "type": "string"
              },
              "timeout_seconds": {
                "type": "integer",
                "minimum": 1
              },
              "resources": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                  "cpu": {
                    "type": "number",
                    "minimum": 0
                  },
                  "mem_mb": {
                    "type": "integer",
                    "minimum": 0
                  }
                }
              },
              "cache_key": {
                "type": "string"
              },
              "when": {
                "type": "string"
              },
              "outputs": {
                "type": "array",
                "items": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": [
                    "name",
                    "type"
                  ],
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "type": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}